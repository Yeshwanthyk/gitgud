{
  "name": "gitgud-skills",
  "version": "0.1.0",
  "description": "CLI for managing AI agent skills",
  "keywords": [
    "cli",
    "ai",
    "agents",
    "skills",
    "claude",
    "claude-code"
  ],
  "author": "yesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yesh/gitgud"
  },
  "type": "module",
  "bin": {
    "gitgud": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun --watch src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun --external giget --external yaml",
    "build:binary": "bun build src/cli.ts --compile --outfile dist/gitgud",
    "prepublishOnly": "bun run build",
    "check": "biome check .",
    "test": "bun test",
    "format": "biome format . --write",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "build:darwin-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/gitgud-darwin-arm64",
    "build:darwin-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/gitgud-darwin-x64",
    "build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile dist/gitgud-linux-x64",
    "build:linux-arm64": "bun build src/cli.ts --compile --target=bun-linux-arm64 --outfile dist/gitgud-linux-arm64"
  },
  "dependencies": {
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@biomejs/biome": "^1.9.0"
  }
}
